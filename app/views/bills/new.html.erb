<h2> What was the bill for? </h2>
<%= form_with scope: :bill, url: group_bills_path(@group.id), method: :post, local: true do |form| %>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= form.label :amount %>
        <%= form.text_field :amount, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="form-group col-md-3"> 
          <%= form.submit %>
      </div>
    </div>
<% end %>